{
    "name": "hiring",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap-cloud-sdk/http-client": "^3.0.2",
        "@sap/cds": "^6",
        "@sap/cds-dk": "^6.7.0",
        "@sap/xsenv": "^3.4.0",
        "@sap/xssec": "^3.2.17",
        "express": "^4",
        "hdb": "^0.19.0",
        "passport": "^0.6.0"
    },
    "devDependencies": {
        "sqlite3": "^5.0.4",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds run",
        "watch-sfsf-hiring-requests": "cds watch --open sfsf-hiring-requests/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy hiring --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "engines": {
        "node": "^16.15"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "hana": {
            "deploy-format": "hdbtable"
        },
        "requires": {
            "auth": {
                "[development]": {
                    "strategy": "mock",
                    "users": {
                        "admin": {
                            "roles": [
                                "Admin"
                            ]
                        },
                        "requester": {
                            "roles": [
                                "Requester"
                            ]
                        }
                    }
                }
            },
            "ECPositionManagement": {
                "kind": "odata-v2",
                "model": "srv/external/ECPositionManagement",
                "credentials": {
                    "destination": "SF_COE",
                    "path": "/odata/v2"
                }
            },
            "ECFoundationOrganization": {
                "kind": "odata-v2",
                "model": "srv/external/ECFoundationOrganization",
                "credentials": {
                    "destination": "SF_COE",
                    "path": "/odata/v2"
                }
            },
            "[hybrid]": {
                "db": {
                    "kind": "hana"
                }
            },
            "db": {
                "kind": "hana"
            }
        }
    },
    "sapux": [
        "app/sfsf-hiring-requests"
    ]
}